rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // MEALS:
    // A user can only create a meal for themselves.
    // A user can only read, update, or delete their own meals.
    match /meals/{mealId} {
      allow create: if request.auth.uid != null && request.auth.uid == request.resource.data.userId;
      allow read, update, delete: if request.auth.uid == resource.data.userId;
    }

    // USERS:
    // This rule now applies to the user document and ALL subcollections (profile, goals, etc.)
    // A user can only create, read, update, or delete documents within their own user path.
    match /users/{userId}/{document=**} {
      allow create: if request.auth.uid == userId;
      allow read, update, delete: if request.auth.uid == userId;
    }
  }
}